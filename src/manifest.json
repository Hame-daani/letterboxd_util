{
    "manifest_version": 2,
    "name": "Letterboxd Util",
    "description": "leading you to sites that you can download movies.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://letterboxd.com/film/*"
            ],
            "js": [
                "js/script.js"
            ],
            "css": [
                "css/script.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}